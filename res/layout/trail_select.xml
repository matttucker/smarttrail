<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:id="@+id/layout_root">

	<TextView android:text="@string/selectArea"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_margin="10dp" style="@android:style/TextAppearance.Large" />

	<Spinner android:id="@+id/areaSpinner" android:layout_weight="1"
		android:layout_height="wrap_content" android:layout_width="match_parent"
		android:layout_marginBottom="25dp" />

	<TextView android:text="@string/selectTrail"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_margin="10dp" style="@android:style/TextAppearance.Large" />

	<Spinner android:id="@+id/trailSpinner" android:layout_weight="1"
		android:layout_height="wrap_content" android:layout_width="match_parent"
		android:layout_marginBottom="25dp" />
</LinearLayout>

	