<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/conditionSelectorLayout" android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="wrap_content" android:padding="10dp">

	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="match_parent" android:id="@+id/linearLayout1">
		<Button android:layout_weight="1" android:layout_height="50dp"
			android:layout_width="0dp" android:id="@+id/goodButton" android:text="GOOD"
			android:background="@color/conditionGood" android:textColor="@android:color/white"
			android:textStyle="bold" />

		<Button android:layout_weight="1" android:layout_height="50dp"
			android:layout_width="0dp" android:id="@+id/fairButton" android:text="FAIR"
			android:background="@color/conditionFair" android:textColor="@android:color/white"
			android:textStyle="bold" />


		<Button android:layout_weight="1" android:layout_height="50dp"
			android:layout_width="0dp" android:id="@+id/poorButton" android:text="POOR"
			android:background="@color/conditionPoor" android:textColor="@android:color/white"
			android:textStyle="bold" />

	</LinearLayout>


	<LinearLayout android:layout_marginTop="40dp"
		android:layout_height="wrap_content" android:layout_width="match_parent"
		android:id="@+id/linearLayout2">
		<ImageView android:id="@+id/goodPointer"
			android:layout_weight="1" android:layout_height="20dp"
			android:scaleType="centerInside" android:layout_width="20dp"
			android:src="@drawable/status_pointer" android:visibility="invisible" />

		<ImageView android:id="@+id/fairPointer"
			android:layout_weight="1" android:layout_height="20dp"
			android:scaleType="centerInside" android:layout_width="20dp"
			android:src="@drawable/status_pointer" android:visibility="invisible" />

		<ImageView android:id="@+id/poorPointer"
			android:layout_weight="1" android:layout_height="20dp"
			android:scaleType="centerInside" android:layout_width="20dp"
			android:src="@drawable/status_pointer" android:visibility="invisible" />
	</LinearLayout>

	<View android:id="@+id/selectBar" android:layout_below="@id/linearLayout1"
		android:layout_width="match_parent" android:layout_height="15dp"
		android:background="@android:color/black" />
</RelativeLayout>
